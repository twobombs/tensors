# X-run script for non-nvidia hosts
rm /tmp/.X0-lock
export LIBGL_ALWAYS_SOFTWARE=1&&Xvfb :0 -screen 0 1280x720x24 -ac&
sleep 10
export DISPLAY=:0&&startxfce4&
sleep 10
x0vncserver -display :0 -passwordfile /root/.vnc/passwd&
/usr/share/novnc/utils/launch.sh --vnc localhost:5900&

# placeholder for tensorflow/board/projector start 
./tensorflow 
jupyter notebook --notebook-dir=/tf --ip 127.0.0.1 --no-browser --allow-root

echo "done"
read n -1
